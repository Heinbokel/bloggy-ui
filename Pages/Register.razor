@page "/register"

<h3>Create an Account</h3>

@if (registrationSuccess)
{
    <p>Registration successful!</p>
}
else
{
    <EditForm Model="@userRegisterRequest" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />

        <ValidationSummary />

        <div class="form-group">
            <label for="UserName">User Name</label>
            <InputText id="UserName" @bind-Value="userRegisterRequest.UserName" class="form-control" />
            <ValidationMessage For="@(() => userRegisterRequest.UserName)" />
        </div>

        <div class="form-group">
            <label for="Email">Email</label>
            <InputText id="Email" @bind-Value="userRegisterRequest.Email" class="form-control" />
            <ValidationMessage For="@(() => userRegisterRequest.Email)" />
        </div>

        <div class="form-group">
            <label for="Password">Password</label>
            <InputText id="Password" @bind-Value="userRegisterRequest.Password" class="form-control" type="password" />
            <ValidationMessage For="@(() => userRegisterRequest.Password)" />
        </div>

        <div class="form-group">
            <label for="FirstName">First Name</label>
            <InputText id="FirstName" @bind-Value="userRegisterRequest.FirstName" class="form-control" />
            <ValidationMessage For="@(() => userRegisterRequest.FirstName)" />
        </div>

        <div class="form-group">
            <label for="LastName">Last Name</label>
            <InputText id="LastName" @bind-Value="userRegisterRequest.LastName" class="form-control" />
            <ValidationMessage For="@(() => userRegisterRequest.LastName)" />
        </div>

        <div class="form-group">
            <label for="DateOfBirth">Date of Birth</label>
            <InputDate id="DateOfBirth" @bind-Value="userRegisterRequest.DateOfBirth" class="form-control" />
            <ValidationMessage For="@(() => userRegisterRequest.DateOfBirth)" />
        </div>

        <div class="form-group">
            <label for="UserRoleId">User Role ID</label>
            <InputNumber id="UserRoleId" @bind-Value="userRegisterRequest.UserRoleId" class="form-control" />
            <ValidationMessage For="@(() => userRegisterRequest.UserRoleId)" />
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
    </EditForm>
}